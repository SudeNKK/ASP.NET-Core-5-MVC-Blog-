@page
@model EmailModel
@{
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div id="account-details">
    <h3>Email Ayarları</h3>
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <div class="register-form login-form clearfix">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                Email Adresi
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control text-success" disabled />
                        <div class="input-group-append">
                            <span class="form-control input-group-text text-success font-weight-bold"><i class="lastudioicon-check"></i></span>

                        </div>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="form-control text-danger" disabled />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Doğrulama maili gönder</button>
                }
            </div>
            <div class="form-group">
                Yeni Email Adresi
                <input type="email" asp-for="Input.NewEmail" class="form-control" required onkeypress="return spaceBloker()" maxlength="64" minlength="6" />
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            <div class="register-box">
                <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="return-customer-btn float-right">Email Adresi Değiştir</button>
            </div>
        </form>
    </div>
</div>