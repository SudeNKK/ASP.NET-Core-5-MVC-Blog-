@page
@model LogoutModel


<div class="breadcrumb-area">
    <div class="container">
        <ol class="breadcrumb breadcrumb-list">
            <li class="breadcrumb-item"><a asp-area="User" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
            <li class="breadcrumb-item active">Çıkış Yap</li>
        </ol>
    </div>
</div>
<div class="login ptb-90">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-lg-8 offset-xl-3 offset-lg-2">
                <div class="login-form">
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <form class="form-inline text-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="login-btn">Çıkış yapmak için tıklayın</button>
                            </form>
                        }
                        else
                        {
                            <p>
                                Uygulamadan başarıyla çıkış yaptınız.
                            </p>
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</div>