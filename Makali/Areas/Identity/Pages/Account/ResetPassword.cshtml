@page
@model ResetPasswordModel


<div class="breadcrumb-area">
    <div class="container">
        <ol class="breadcrumb breadcrumb-list">
            <li class="breadcrumb-item"><a asp-area="User" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
            <li class="breadcrumb-item active">Parolanızı Sıfırlayın</li>
        </ol>
    </div>
</div>
<div class="register-area ptb-90">
    <div class="container">
        <h3 class="login-header">Parolanızı Sıfırlayın</h3>
        <div class="row">
            <div class="col-xl-6 col-lg-8 offset-xl-3 offset-lg-2">
                <div class="login-form">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Input.Code" type="hidden" />
                        <div class="form-group">
                            Email
                            <input asp-for="Input.Email" type="email" class="form-control" required onkeypress="return spaceBloker()" maxlength="64" minlength="6" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            Yeni Parola
                            <input asp-for="Input.Password" class="form-control" required onkeypress="return spaceBloker()" maxlength="16" minlength="5" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            Yeni Parola Tekrar
                            <input asp-for="Input.ConfirmPassword" class="form-control" required onkeypress="return spaceBloker()" maxlength="16" minlength="5" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="return-customer-btn">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 