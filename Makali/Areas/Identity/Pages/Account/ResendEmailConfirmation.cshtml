@page
@model ResendEmailConfirmationModel

<div class="breadcrumb-area">
    <div class="container">
        <ol class="breadcrumb breadcrumb-list">
            <li class="breadcrumb-item"><a asp-area="User" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
            <li class="breadcrumb-item active">Email Onayını Yeniden Gönder</li>
        </ol>
    </div>
</div>
<div class="register-area ptb-90">
    <div class="container">
        <h3 class="login-header">Email Onayını Yeniden Gönder</h3>
        <div class="row">
            <div class="col-xl-6 col-lg-8 offset-xl-3 offset-lg-2">
                <div class="login-form">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            Email Adresinizi Giriniz
                            <input asp-for="Input.Email" class="form-control" type="email" required onkeypress="return spaceBloker()" maxlength="64" minlength="6" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="return-customer-btn">Doğrulama Maili Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>