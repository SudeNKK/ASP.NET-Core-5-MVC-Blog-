@model Contact

<div class="dash-app">
    <header class="dash-toolbar">
        <a href="#!" class="menu-toggle">
            <i class="fas fa-bars"></i>
        </a>
        <div class="tools">
            <div class="dropdown tools-item">
                <a asp-area="User" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </div>
        </div>
    </header>
    <main class="dash-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card spur-card">
                        <div class="card-header">
                            <div class="spur-card-icon">
                                <i class="fas fa-th-list"></i>
                            </div>
                            <div class="spur-card-title">İçerik Yönetimi / İletişim</div>
                        </div>
                        <div class="card-body ">
                            <form asp-action="Edit" method="post">
                                <input type="hidden" asp-for="Id"/>
                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label for="inputEmail4"><strong>Adres</strong></label>
                                        <input type="text" asp-for="Address" class="form-control" required />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="inputEmail4"><strong>Telefon Numarası</strong></label>
                                        <input type="tel" asp-for="PhoneNumber" class="form-control" required />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="inputEmail4"><strong>Email</strong></label>
                                        <input type="email" asp-for="Email" class="form-control" required />
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="inputEmail4"><strong>Google Harita Iframe (Src Kısmını Giriniz)</strong></label>
                                        <input type="text" asp-for="GoogleMap" class="form-control" required />
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-success">Güncelle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>









