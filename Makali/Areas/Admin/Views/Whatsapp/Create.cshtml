@model WhatsApp

<div class="dash-app">
    <header class="dash-toolbar">
        <a href="#!" class="menu-toggle">
            <i class="fas fa-bars"></i>
        </a>
        <div class="tools">
            <div class="dropdown tools-item">
                <a asp-area="User" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </div>
        </div>
    </header>
    <main class="dash-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card spur-card">
                        <div class="card-header">
                            <div class="spur-card-icon">
                                <i class="fas fa-th-list"></i>
                            </div>
                            <div class="spur-card-title">İçerik Yönetimi / WhatsApp Hattı / Ekle</div>
                        </div>
                        <div class="card-body">
                            <form asp-action="Create" method="post">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <strong>WhatsApp Numarası</strong><br />
                                        <label class="text text-warning">
                                            <b>
                                                Örnek: +905xxxxxxxxx
                                            </b>
                                        </label>
                                        <input asp-for="PhoneNumber" class="form-control" required />
                                    </div>
                                    <div class="form-group col-md-6">

                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <strong>Otomatik Mesaj</strong>
                                        <input asp-for="Text" class="form-control" required />
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" asp-for="IsActive" class="custom-control-input" id="customCheck1">
                                            <label class="custom-control-label" for="customCheck1"><strong>WhatsApp Butonu Aktif Olsun Mu?</strong></label>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Ekle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
