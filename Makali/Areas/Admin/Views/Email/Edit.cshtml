@model MailSettings
<div class="dash-app">
    <header class="dash-toolbar">
        <a href="#!" class="menu-toggle">
            <i class="fas fa-bars"></i>
        </a>
        <div class="tools">
            <div class="dropdown tools-item">
                <a asp-area="User" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </div>
        </div>
    </header>
    <main class="dash-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card spur-card">
                        <div class="card-header">
                            <div class="spur-card-icon">
                                <i class="fas fa-cogs"></i>
                            </div>
                            <div class="spur-card-title">Ayarlar / Email Ayarları</div>
                        </div>
                        <div class="card-body">
                            <form asp-action="Edit" method="post">
                                <input type="hidden" asp-for="MailSettingsId" />
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <strong>Gönderen Email</strong>
                                        <input type="email" asp-for="FromEmailAddress" class="form-control" required />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <strong>Gönderen Email Görünen ad</strong>
                                        <input asp-for="FromEmailAddressDisplayName" class="form-control" required />
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <strong>Gönderilecek Email</strong>
                                        <input type="email" asp-for="SendEmailAddress" class="form-control" required />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <strong>Gönderilecek Email Görünen Ad</strong>
                                        <input asp-for="SendEmailAddressDisplayName" class="form-control" required />
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <strong>Smtp Host</strong>
                                        <input type="text" asp-for="SmtpHost" class="form-control" required placeholder="Örnek: sitename.com" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <strong>Smtp Port</strong>
                                        <input asp-for="SmtpPort" class="form-control" required placeholder="Örnek: 587" />
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <strong>Email Adresi</strong>
                                        <input type="email" asp-for="EmailAddress" class="form-control" required />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <strong>Email Şifresi</strong>
                                        <input asp-for="EmailAddressPassword" class="form-control" required />
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-success">Güncelle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

